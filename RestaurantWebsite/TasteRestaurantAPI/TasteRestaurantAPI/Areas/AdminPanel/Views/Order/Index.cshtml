
@{
    ViewData["Title"] = "Index";
    List<OrderMaster> orderMasters = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Users</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Order Number</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ordermaster in orderMasters)
                            {
                            <tr>
                                <td><span style="color: mediumseagreen; font-size: 17px; font-weight: bold">#</span> @ordermaster.OrderNumber</td>
                                <td>
                                    <a class="btn btn-success" asp-action="Detail" asp-route-id="@ordermaster.OrderMasterId"><i class="mdi mdi-account-card-details" style="font-weight: 800"></i></a>
                                    @*<a class="btn btn-success" asp-action="Update" asp-route-id="@ordermaster.OrderMasterId"><i class="mdi mdi-refresh" style="font-weight: 800"></i></a>*@
                                    <a class="btn btn-success" asp-action="Delete" asp-route-id="@ordermaster.OrderMasterId"><i class="mdi mdi-delete" style="font-weight: 800"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

