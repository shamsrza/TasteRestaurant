
@{
    ViewData["Title"] = "OrderedFoodItems";
    List<OrderDetail> orderDetails = Model;
}

<div class="row">
<div class="col-lg-12 grid-margin stretch-card">
    
    <div class="card">
       
        <div class="card-body">
            <h4 class="card-title">Ordered Food Items</h4>
            <div class="table-responsive">
                <table class="table" style="text-align: center">
                    <thead>
                        <tr>
                            <th>Food Item Id</th>
                            <th>Food Item Name</th>
                            <th>Ordered Quantity</th>
                            <th>Per unit price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in orderDetails)
                        {
                            <tr>
                                <td>@item.FoodItemId</td>
                                <td>@item.FoodItem.FoodItemName</td>
                                <td>@item.Quantity</td>
                                <td>@item.FoodItemPrice</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <a class="btn btn-success" asp-action="Index"> <<< Back</a>
    </div>
</div>
</div>
