
@{
    ViewData["Title"] = "Index";
    List<Reservation> reservations = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Reservations</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Reservation number</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in reservations)
                            {
                                <tr>

                                    <td># @item.ReservationNumber</td>
                                    <td>@item.Date</td>
                                    <td>
                                        <a class="btn btn-success" asp-action="Detail" asp-route-id="@item.ReservationId"><i class="mdi mdi-account-card-details" style="font-weight: 800"></i></a>
                                        <a class="btn btn-success" asp-action="Update" asp-route-id="@item.ReservationId"><i class="mdi mdi-refresh" style="font-weight: 800"></i></a>
                                        <a class="btn btn-success" asp-action="Delete" asp-route-id="@item.ReservationId"><i class="mdi mdi-delete" style="font-weight: 800"></i></a>
                                    </td>
                                   
                                </tr>
                             }
                            </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

